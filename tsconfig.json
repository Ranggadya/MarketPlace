{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/layers/services/*"],
      "@controllers/*": ["src/layers/controllers/*"],
      "@repositories/*": ["src/layers/repositories/*"],
      "@validators/*": ["src/layers/validators/*"],
      "@models/*": ["src/lib/models/*"],
      "@components/*": ["src/components/*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ],

    "allowSyntheticDefaultImports": true
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
